{
  "root": true,

  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },

  "extends": ["plugin:react/recommended", "eslint:recommended","prettier"],

  "parser": "@typescript-eslint/parser",

  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "plugins": [
    "react",
    "html",
    "@typescript-eslint"
  ],

  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}
